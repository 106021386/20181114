import java.util.Scanner;

public class p9 {
    public static void main(String[] args) {
        Scanner scn = new Scanner(System.in);
        int a = scn.nextInt();
        int sum=0;
        for(int i=1;i<=a;i++){
            double b =Math.pow(2,i);
            sum+=b;
        }
        System.out.println(sum);
    }
}
